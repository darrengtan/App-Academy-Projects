<h1><%= @album.album_name %></h1>
<h2>by: <%= @album.band.name %></h2>

<%= button_to "Edit #{@album.album_name}", edit_album_url(@album), method: :get %>
<%= button_to "Delete #{@album.album_name}", album_url(@album), method: :delete %>

<% @album.tracks.each do |track| %>
  <%= link_to "#{track.track_name}", track_url(track) %>
  <br/>
<% end %>

<br/>
<%= link_to "Add a New Track!", new_album_track_url(@album) %>

<br/>
<%= link_to "Back to #{@album.band.name} Track List", band_url(@album.band) %>
