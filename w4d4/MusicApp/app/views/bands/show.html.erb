<h1><%= @band.name %></h1>

<%= button_to "Edit #{@band.name}", edit_band_url(@band), method: :get %>
<%= button_to "Delete #{@band.name}", band_url, method: :delete %>

<h2>Albums</h2>
<% @band.albums.each do |album| %>
  <%= link_to album.album_name, album_url(album) %>
  <br/>
<% end %>
<br/>

<%= link_to "Add a New Band Album", new_band_album_url(@band) %>
<br/>
<%= link_to "Back to Band List", bands_url %>
